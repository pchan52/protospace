.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to image_tag(prototype.prototype_images.first.content), prototype_path(prototype.id)
    .caption
      %h3
        = prototype.name
      .proto-meta
        .proto-user
          = link_to "by #{prototype.user.name}", user_path(prototype.user.id)
        .proto-posted
          = prototype.created_at.strftime('%m/%d')
      %ul.proto-tag-list.list-inline
        %li
          - prototype.tags.each do |tag|
            %li
              = link_to "#{tag.name}", tag_path(tag), class: "btn btn-default"
