- if user_signed_in?
  - if prototype.liked_user?(current_user)
    = button_to prototype_like_path(id: like.id, prototype_id: prototype.id), method: :delete, remote: true, class: 'btn btn-default' do
      = image_tag("icon_heart_red.svg")
      Like
      %span#likes_number.num
        = prototype.likes_count
  -else
    = button_to prototype_likes_path(prototype), class: "btn btn-default", remote: true do
      = image_tag("icon_heart.svg")
      Like
      %span#likes_number.num
        = prototype.likes_count
- else
  %button.btn.btn-default.btn--like
    = image_tag("icon_heart.svg")
    Like
    %span#likes_number.num
      = prototype.likes_count